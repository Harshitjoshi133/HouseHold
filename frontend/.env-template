# Vue.js Application Configuration

# API Configuration
VUE_APP_API_BASE_URL=http://127.0.0.1:5000/api
# For production, use: VUE_APP_API_BASE_URL=https://your-backend-domain.com/api

# Application Configuration
VUE_APP_NAME=Household Services Manager
VUE_APP_VERSION=1.0.0

# Development Configuration
NODE_ENV=development
# For production: NODE_ENV=production

# Build Configuration
VUE_APP_PUBLIC_PATH=/
# For subdirectory deployment: VUE_APP_PUBLIC_PATH=/app/

# Feature Flags
VUE_APP_ENABLE_ANALYTICS=false
VUE_APP_ENABLE_DEBUG_MODE=true
# For production: VUE_APP_ENABLE_DEBUG_MODE=false

# External Services (if needed)
# VUE_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# VUE_APP_STRIPE_PUBLIC_KEY=your-stripe-public-key

# Upload Configuration
VUE_APP_MAX_FILE_SIZE=16777216  # 16MB in bytes
VUE_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination Configuration
VUE_APP_ITEMS_PER_PAGE=10
VUE_APP_MAX_PAGINATION_LINKS=5

# Session Configuration
VUE_APP_SESSION_TIMEOUT=3600000  # 1 hour in milliseconds
VUE_APP_REFRESH_TOKEN_INTERVAL=300000  # 5 minutes in milliseconds

# Notification Configuration
VUE_APP_NOTIFICATION_DURATION=5000  # 5 seconds
VUE_APP_MAX_NOTIFICATIONS=5 